{% macro recipes(name, recipes, recipeFiles) %}
  <section class="recipes">
    <div class="container">
      <div class="recipes__tag">
        {% if name %}
          <h3 class="recipes__tag--title">{{name}}</h3>
        {% endif %}
      </div>
      <div class="recipes__thumb">
        {% for recipe in recipes %}
          <div class="recipes__thumb--card">
            <figure class="recipes__thumb--card-img">
              {% for file in recipeFiles %}
                {% if file.recipe_id == recipe.id %}
                  <img src="{{file.src}}" alt="{{file.name}}">
                {% endif %}
              {% endfor %}
            </figure>

            <h4 class="recipes__thumb--card-title">{{recipe.title}}</h4>
            <p class="recipes__thumb--card-author">por {{recipe.chef_name}}</p>
            <a class="recipes__thumb--card-details" href="/recipe/{{recipe.id}}">Visualizar</a>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
{% endmacro %}